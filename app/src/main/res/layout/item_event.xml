<?xml version="1.0" encoding="utf-8"?>
<!-- item_event.xml – RecyclerView row for a single event -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/abc_dialog_material_background">

    <!-- Date Box -->
    <LinearLayout
        android:layout_width="46dp"
        android:layout_height="52dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#EEF2FF"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/tvEventMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAR"
            android:textColor="#4F7EF8"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEventDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textColor="#4F7EF8"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Event Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textColor="#111111"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvEventMeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue · 7:00 PM"
            android:textColor="#888888"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Category Badge -->
    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:textSize="10sp"
        android:textColor="#4F7EF8"
        android:background="#EEF2FF"
        android:padding="4dp" />

</LinearLayout>